{
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "vdom",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "paths": {
      "vdom": ["./src/vdom"],
      "vdom/jsx-runtime": ["./src/vdom/jsx-runtime"],
      "vdom/jsx-dev-runtime": ["./src/vdom/jsx-dev-runtime"]
    }
  }
}
