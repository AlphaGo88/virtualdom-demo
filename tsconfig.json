{
  "include": ["src/**/*", "play/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "vdom",
    "strict": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client"],
    "paths": {
      "vdom": ["./src/index"],
      "vdom/jsx-runtime": ["./src/jsx-runtime"],
      "vdom/jsx-dev-runtime": ["./src/jsx-dev-runtime"],
      "core/*": ["./src/core/*"],
      "dom/*": ["./src/dom/*"],
      "shared/*": ["./src/shared/*"]
    }
  }
}
